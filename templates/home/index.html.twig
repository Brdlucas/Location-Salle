{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<main>
    {% if app.user %}
    <h2 class="text-center text-white">Bonjour {{app.user.firstname}} {{app.user.lastname}}</h2>
    {% else %}
    <h2></h2>
    {% endif %}

    <div>
        {% for room in rooms %}
        <div class="card-group w-50 m-auto text-center">
            <div class="card m-4" style="background: #F0F0F0">
                <div class="card-body">
                    <img src="assets/img/image{{room.id}}.jpg" alt="image{{room.id}}" class="w-100">
                    <h5 class="card-title" style="font-size: 30px">{{room.city}} - {{room.capacity}} personnes</h5>
                    <p class="card-text" style="font-size: 25px;">{{room.description}}</p>
                    <p class="card-text"><strong class="text-body-secondary" style="font-size: 20px">{{room.price}}
                            â‚¬</strong></p>
                    <div>
                        <a href="{{path('one_location', {id : room.id})}}" class="btn btn-success"
                            style="font-size: 25px">Voir la salle</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
        <div class="text-center m-3">
            <a href="{{path('app_locations')}}" class="btn" style="background: #FDE2F3">Voir toute les salles</a>
        </div>
</main>
{% endblock %}