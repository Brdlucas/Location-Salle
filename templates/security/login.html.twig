{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {# #}
    {% if app.user %}
    <script>window.location.href = "{{ path('app_home') }}"</script>
    {% endif %}
    <div class="w-50 m-auto">

        <h1 class="h3 mb-3 font-weight-normal text-center mt-5">Connectez-vous !</h1>
        <label for="inputEmail" class="mx-4">Email :</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control m-3"
            autocomplete="email" required autofocus>
        <label for="inputPassword" class="mx-4">Mot de passe :</label>
        <input type="password" name="password" id="inputPassword" class="form-control m-3"
            autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
        <div class="text-center m-3">
            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button>
        </div>

        <div class="text-center mt-5">
            <p><small>Vous Ãªtes nouveau ? <a href="{{path('app_register')}}"
                        class="btn btn-success">Inscrivez-vous!</a></small></p>
        </div>
    </div>
</form>
{% endblock %}